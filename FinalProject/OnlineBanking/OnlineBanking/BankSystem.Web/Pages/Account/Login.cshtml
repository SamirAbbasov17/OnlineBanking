<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Paylio - Money Transfer and Online Payments HTML Template</title>
    <link rel="stylesheet" href="~/bundle/vendor.min.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
          integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

    <link rel="stylesheet" href="~/bundle/main.min.css" asp-append-version="true" />

    <link rel="shortcut icon" href="~/bank/assets/img/fav.png" type="image/x-icon">
    <link rel="stylesheet" href="~/bank/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/bank/assets/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/bank/assets/css/plugin/nice-select.css">
    <link rel="stylesheet" href="~/bank/assets/css/plugin/slick.css">
    <link rel="stylesheet" href="~/bank/assets/css/custom-family.css">
    <link rel="stylesheet" href="~/bank/assets/css/plugin/magnific-popup.css">
    <link rel="stylesheet" href="~/bank/assets/css/plugin/animate.css">
    <link rel="stylesheet" href="~/bank/assets/css/style.css">
</head>

<body>

    <partial name="_CookieConsentPartial" />

    @if (TempData.ContainsKey(GlobalConstants.TempDataSuccessMessageKey))
    {
        <div class="alert alert-primary fade show mb-0" role="alert">
            <div class="container d-flex flex-row">
                <i class="fas fa-check fa-2x align-self-center"></i>
                <p class="pl-3 my-2" style="font-size: large;">@TempData[GlobalConstants.TempDataSuccessMessageKey]</p>
                <div class="ml-auto">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    }

    @if (TempData.ContainsKey(GlobalConstants.TempDataErrorMessageKey))
    {
        <div class="alert alert-danger fade show mb-0" role="alert">
            <div class="container d-flex flex-row">
                <i class="fas fa-exclamation-circle fa-2x align-self-center"></i>
                <p class="pl-3 my-2" style="font-size: large;">@TempData[GlobalConstants.TempDataErrorMessageKey]</p>
                <div class="ml-auto">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    }

    @if (TempData[GlobalConstants.TempDataNoTwoFactorKey] as bool? == true)
    {
        <div class="modal fade" id="noTwoFactorModal" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-dialog-centered show" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Two-factor authentication is disabled</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Enabling two-factor authentication enhances the security of your account
                        and protects it better from hackers, and is highly recommended.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-link mr-auto text-muted" data-dismiss="modal"
                                onclick="noTwoFactorModalDoNotShow()">
                            Do not show for 30 days
                        </button>

                        <button type="button" class="btn btn-outline-primary d-none d-md-inline-block"
                                data-dismiss="modal">
                            Close
                        </button>

                        <a asp-page="/Account/Settings/Enable2fa" class="btn btn-primary">
                            Enable now
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }




    <!-- start preloader -->
    <div class="preloader" id="preloader"></div>
    <!-- end preloader -->
    <!-- Scroll To Top Start-->
    <a href="javascript:void(0)" class="scrollToTop"><i class="fas fa-angle-double-up"></i></a>
    <!-- Scroll To Top End -->
    <!-- Login Reg In start -->
    <section class="log-reg login-2">
        <div class="overlay">
            <div class="container">
                <div class="top-head-area" style="margin-bottom:0px">
                    <div class="row d-flex align-items-center">
                        <div class="col-sm-5 col">
                            <a class="back-home" href="/Home/Index">
                                <img src="~/bank/assets/img/left-icon.png" alt="image">
                                Back To Paylio
                            </a>
                        </div>
                        <div class="col-sm-5 col">
                            <a href="/Home/Index">
                                <img src="~/bank/assets/img/logo.png" alt="image">
                            </a>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center align-items-center">
                    <div class="col-md-5">
                        <div class="img-area">
                            <img src="~/bank/assets/img/login-bg-2.png" alt="image">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-7 z-1 text-center d-flex justify-content-center pb-120">
                        <div class="form-box">
                            <h4>Log in to Paylio</h4>
                            <p style="margin-bottom:60px" class="dont-acc">Don't have an account? <a href="/account/register">Register</a></p>
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="personal" role="tabpanel" aria-labelledby="personal-tab">
                                    <div class="login-with d-flex align-items-center">
                                        <a href="javascript:void(0)"><img src="~/bank/assets/img/google.png" alt="image"></a>
                                        <a href="javascript:void(0)"><img src="~/bank/assets/img/fb.png" alt="image"></a>
                                    </div>
                                    <div class="continue"><p>Or continue with</p></div>
                                    <form method="post">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="single-input d-flex align-items-center">
                                                    <input asp-for="Input.Email" placeholder="Email" autocomplete="off"/>
                                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="single-input d-flex align-items-center">
                                                    <input asp-for="Input.Password" class="passInput" placeholder="Password" />
                                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                                    <img class="showPass" src="~/bank/assets/img/show-hide.png" alt="image">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="remember-forgot d-flex justify-content-end">
                                            <div class="forget-pw">
                                                <a href="javascript:void(0)">Forgot your password?</a>
                                            </div>
                                        </div>
                                        <div class="btn-area">
                                            <button type="submit" class="cmn-btn">Log in</button>
                                        </div>
                                    </form>
                                </div>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Login Reg In end -->

    <script src="~/bank/assets/js/jquery.min.js"></script>
    <script src="~/bank/assets/js/proper-min.js"></script>
    <script src="~/bank/assets/js/bootstrap.min.js"></script>
    <script src="~/bank/assets/js/fontawesome.js"></script>
    <script src="~/bank/assets/js/plugin/slick.js"></script>
    <script src="~/bank/assets/js/plugin/jquery.magnific-popup.min.js"></script>
    <script src="~/bank/assets/js/plugin/apexcharts.min.js"></script>
    <script src="~/bank/assets/js/plugin/jquery.nice-select.min.js"></script>
    <script src="~/bank/assets/js/plugin/jquery.countdown.js"></script>
    <script src="~/bank/assets/js/plugin/wow.min.js"></script>
    <script src="~/bank/assets/js/plugin/plugin.js"></script>
    <script src="~/bank/assets/js/main.js"></script>

    <script src="~/bundle/vendor.min.js" asp-append-version="true"></script>
    <script src="~/bundle/main.min.js" asp-append-version="true"></script>

    @if (TempData[GlobalConstants.TempDataNoTwoFactorKey] as bool? == true)
    {
        <script>
            $('#noTwoFactorModal').modal('show');

            function noTwoFactorModalDoNotShow() {
                document.cookie = '@GlobalConstants.IgnoreTwoFactorWarningCookie=yes; Max-Age=2592000; Secure';
            }
        </script>
    }

</body>



<section class="dashboard-section body-collapse pay">
    <div class="overlay pt-120">
        <div class="container-fruid">
            <div class="main-content">
                <div class="head-area d-flex align-items-center justify-content-between">
                    <h4>Money Transfers</h4>
                    <div class="icon-area">
                        <img src="~/user/assets/images/icon/support-icon.png" alt="icon">
                    </div>
                </div>
                <div class="row pb-120">
                    <div class="col-xxl-3 col-xl-4 col-md-5">
                        <a asp-area="MoneyTransfers" asp-controller="Internal" asp-action="Create" class="single-item">
                            <div class="icon-area">
                                <img src="~/user/assets/images/icon/paylio-account-icon.png" alt="icon">
                            </div>
                            <p class="mdr">Internal transfer</p>
                            <span class="mdr">Money transfer between two accounts</span>
                        </a>
                    </div>
                    <div class="col-xxl-3 col-xl-4 col-md-5">
                        <a asp-area="MoneyTransfers" asp-controller="Global" asp-action="Create" class="single-item">
                            <div class="icon-area">
                                <img src="~/user/assets/images/icon/bank-account-icon.png" alt="icon">
                            </div>
                            <p class="mdr">Worldwide transfer</p>
                            <span class="mdr">Money transfer to another bank</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





@using BankSystem.Web.ViewModels;
@model BlogVM
@{
    Layout = "_Layout1";
}





<section class="banner-section inner-pages blog-single-2">
    <div class="overlay">
        <div class="banner-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7 col-md-10">
                        <div class="main-content">
                            <h1>Blog Single</h1>
                            <div class="breadcrumb-area">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb d-flex align-items-center">
                                        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                                        <li class="breadcrumb-item"><a href="/Blogs/Index">Blog</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Blog Single</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- banner-section end -->
<!-- Blog Single In start -->
<section class="blog-single second latest-articles blog-single-2 latest">
    <div class="overlay pb-30 pt-120">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-lg-12">
                    <div class="section-header">
                        <h2 class="title">
                            @Model.Title
                        </h2>
                        <div class="title-bottom d-flex align-items-center justify-content-between">

                            <div class="profile d-flex align-items-center">
                                <img style="max-width:50px;" src="https://uxwing.com/wp-content/themes/uxwing/download/peoples-avatars/corporate-user-icon.png" alt="image">
                                <h5>Admin</h5>
                            </div>
                            <div class="sub-heading">
                                <span class="crypto">@Model.Filter</span>
                                <span class="date">@Model.Created</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <img class="w-100" src="~/uploads/@Model.Image" alt="image">
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="main-content">
                        <div class="single-content">
                            <h4 class="title-area">@Model.Description</h4>
                            <p>
                               @Model.Content
                            </p>
                        </div>

                        <div class="bottom-content d-flex justify-content-between">
                            <div class="right-area d-flex align-items-center">
                                <div class="social">
                                    <ul class="d-flex">
                                        <li>
                                            <a href="javascript:void(0)"><img src="~/bank/assets/img/facebook.png" alt="icon"></a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0)"><img src="~/bank/assets/img/twitter.png" alt="icon"></a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0)"><img src="~/bank/assets/img/instagram.png" alt="icon"></a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0)"><img src="~/bank/assets/img/linkedin.png" alt="icon"></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
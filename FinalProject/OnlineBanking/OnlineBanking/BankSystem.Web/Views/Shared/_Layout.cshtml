        <script>
        $('#noTwoFactorModal').modal('show');

        function noTwoFactorModalDoNotShow() {
            document.cookie = '@GlobalConstants.IgnoreTwoFactorWarningCookie=yes; Max-Age=2592000; Secure';
        }
        </script>
    }

    @RenderSection("Scripts", false)
</body>
</html>










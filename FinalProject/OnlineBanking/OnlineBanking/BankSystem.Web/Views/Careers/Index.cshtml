<!-- Open Positions In start -->
<section class="open-positions" id="open-positions">
    <div class="overlay pt-120 pb-120">
        <div class="container">
            <div class="row justify-content-between align-items-center">
                <div class="col-xl-6">
                    <div class="title-area">
                        <h2 class="text-uppercase">Open positions</h2>
                    </div>
                </div>
                <div class="col-xl-6 d-flex justify-content-start justify-content-xl-end">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all"
                                    type="button" role="tab" aria-controls="all" aria-selected="true">
                                all
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="design-tab" data-bs-toggle="tab" data-bs-target="#design"
                                    type="button" role="tab" aria-controls="design"
                                    aria-selected="false">
                                design
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="development-tab" data-bs-toggle="tab"
                                    data-bs-target="#development" type="button" role="tab" aria-controls="development"
                                    aria-selected="false">
                                development
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="business-tab" data-bs-toggle="tab"
                                    data-bs-target="#business" type="button" role="tab" aria-controls="business"
                                    aria-selected="false">
                                business
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
                        <div class="row">
                            
                            @foreach (var item in Model.VMs)
                            {
                                <div class="col-lg-6">
                                    <div class="single-item">
                                        <h5>@item.JobName</h5>
                                        <P class="xlr">Experience: @item.Experience</P>
                                        <div class="bottom-area d-flex justify-content-between">
                                            <div class="left-bottom d-flex align-items-center">
                                                <span>
                                                    <img src="~/bank/assets/img/clock-icon.png" alt="image">
                                                    @item.JobTime
                                                </span>
                                                <span class="date">@item.Created</span>
                                            </div>
                                            <div class="right-bottom">
                                                <a href="/Careers/Position/@item.Id">Explore more</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                              
                               
                            }            
                        </div>
                    </div>
                    <div class="tab-pane fade" id="design" role="tabpanel" aria-labelledby="design-tab">
                        <div class="row">

                            @foreach (var item in Model.VMs)
                            {
                                @if (item.JobTitle == "design")
                                {
                                    <div class="col-lg-6">
                                        <div class="single-item">
                                            <h5>@item.JobName</h5>
                                            <P class="xlr">Experience: @item.Experience</P>
                                            <div class="bottom-area d-flex justify-content-between">
                                                <div class="left-bottom d-flex align-items-center">
                                                    <span>
                                                        <img src="~/bank/assets/img/clock-icon.png" alt="image">
                                                        @item.JobTime
                                                    </span>
                                                    <span class="date">@item.Created</span>
                                                </div>
                                                <div class="right-bottom">
                                                    <a href="/Careers/Position/@item.Id">Explore more</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                            }
                        </div>
                    </div>
                    <div class="tab-pane fade" id="development" role="tabpanel" aria-labelledby="development-tab">
                        <div class="row">

                            @foreach (var item in Model.VMs)
                            {
                                @if (item.JobTitle == "development")

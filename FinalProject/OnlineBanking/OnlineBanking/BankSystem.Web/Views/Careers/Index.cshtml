<!-- Send Resume In start -->
<section class="send-resume">
    <div class="overlay pt-120 pb-120">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-9 d-flex">
                    <div class="section-header text-center">
                        <h2>We are looking for passionate peopleto join us! Is that you?</h2>
                        <p>
                            We’re all working together to open up the law for everyone, making legal services easy
                            and affordable.
                        </p>
                        <button type="button" class="cmn-btn" data-bs-toggle="modal" data-bs-target="#sendresume">
                            Send Resume
                        </button>
                        <div class="modal fade" id="sendresume" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="apply-now">
                                            <div class="overlay">
                                                <div class="container">
                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <div class="main-content">
                                                                <h2>Apply for Digital Marketing Lead</h2>
                                                                <form class="form" method="post" asp-action="JobApplyFromIndex" enctype="multipart/form-data">
                                                                  
                                                                    <div class="row top-area">
                                                                        <div class="col-sm-6">
                                                                            <div class=" single-input d-flex align-items-center">
                                                                                <div class="input-control">
                                                                                    <input asp-for="@Model.ApplicationVM.Name" class="input-field" placeholder="Name">
                                                                                    <label asp-for="@Model.ApplicationVM.Name" class="input-label"></label>
                                                                                    <span asp-validation-for="@Model.ApplicationVM.Name" class="text-danger"></span>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <div class="col-sm-6">
                                                                            <div class=" single-input d-flex align-items-center">
                                                                                <div class="input-control">
                                                                                    <input asp-for="@Model.ApplicationVM.Phone" class="input-field" placeholder="Phone">
                                                                                    <label asp-for="@Model.ApplicationVM.Phone" class="input-label"></label>
                                                                                    <span asp-validation-for="@Model.ApplicationVM.Phone" class="text-danger"></span>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <div class="col-sm-6">
                                                                            <div class=" single-input d-flex align-items-center">
                                                                                <div class="input-control">
                                                                                    <input asp-for="@Model.ApplicationVM.Email" class="input-field" placeholder="Email">
                                                                                    <label asp-for="@Model.ApplicationVM.Email" class="input-label"></label>
                                                                                    <span asp-validation-for="@Model.ApplicationVM.Email" class="text-danger"></span>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <div class="col-sm-6">
                                                                            <div class=" single-input d-flex align-items-center">
                                                                                <div class="input-control">
                                                                                    <input asp-for="@Model.ApplicationVM.Linkedin" class="input-field" placeholder="Linkedin">
                                                                                    <label asp-for="@Model.ApplicationVM.Linkedin" class="input-label"></label>
                                                                                    <span asp-validation-for="@Model.ApplicationVM.Linkedin" class="text-danger"></span>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="upload-req">
                                                                        <label for="attach"><span class="smr">Attach Resume</span></label>
                                                                        <input asp-for="@Model.ApplicationVM.Cv" id="attach">
                                                                        <span class="smr">You can attach files of size up to 5 MB (PDF Only)</span>
                                                                        <span asp-validation-for="@Model.ApplicationVM.Cv" class="text-danger"></span>
                                                                    </div>
                                                                    <button type="submit" class="cmn-btn">Get started</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




@section JS
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">

        @if (isTrue == "true")
    {
        <text>
            toastr.success('Müraciətiniz qəbul olundu');
        </text>
    }
    else if (isTrue == "false")
    {
        <text>
            toastr.error('CV-niz təsdiqlənən zaman xəta baş verdi. Xahiş olunur düzgün məlumat girdiyinizdən əmin olun');
        </text>
    }   
    </script>

}
   
<!-- Dashboard Section start -->
<section class="dashboard-section body-collapse account">
    <div class="overlay pt-120">
        <div class="container-fruid">
            <div class="main-content">
                <div class="row">
                    <div class="col-xxl-12 col-xl-12">
                        <div class="tab-main">
                            <h2>@ViewData["Title"]</h2>
                            <div class="tab-content mt-40">
                                <form method="post">
                                    <div class="row justify-content-center">
                                        <div class="col-md-12">
                                            <div class="single-input">
                                                <label asp-for="AccountId"></label>
                                                <select class="custom-select" asp-for="AccountId">
                                                    <option disabled selected>Select source account...</option>
                                                    @foreach (var account in Model.OwnAccounts)
                                                    {
                                                        <option value="@account.Id">@account.Name - €@account.Balance.ToString("F2")</option>
                                                    }
                                                </select>
                                                <p asp-validation-for="AccountId" class="text-danger" style="display:inline-block"></p>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="single-input">
                                                <label asp-for="DestinationAccountUniqueId"></label>
                                                <input class="form-control" asp-for="DestinationAccountUniqueId" id="destination" />
                                                <p asp-validation-for="DestinationAccountUniqueId" class="text-danger" style="display:inline-block"></p>
                                                @if (Model.OwnAccounts.Count() > 1)
                                                {
                                                    <select class="custom-select mt-3 text-muted" id="ownAccountPicker">
                                                        <option disabled selected>...or choose another one of your accounts</option>
                                                        @foreach (var account in Model.OwnAccounts)
                                                        {
                                                            <option value="@account.UniqueId">@account.Name - €@account.Balance.ToString("F2")</option>
                                                        }
                                                    </select>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="single-input">
                                                <label asp-for="Amount"></label>
                                                <div class="input-group mb-2">
                                                    <div class="input-group-prepend">
                                                        <div class="input-group-text">€</div>
                                                    </div>
                                                    <input type="number" min="0.01" step="0.01" class="form-control" asp-for="Amount" />
                                                </div>
                                                <p asp-validation-for="Amount" class="text-danger" style="display:inline-block"></p>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="single-input">
                                                <label asp-for="Description">
                                                    Description
                                                    <p style="display:inline-block" class="font-italic text-muted">(optional)</p>
                                                </label>
                                                <input asp-for="Description" />
                                                <p asp-validation-for="Description" class="text-danger style=" display:inline-block""></p>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="btn-border">
                                                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Cancel</a>
                                                <button type="submit" class="cmn-btn">Pay</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                              

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>















@section CustomCss{
    <style>
        .dashboard-section.account::before {
            background: none;
        }
    </style>
}



@section Scripts
    {
    @if (Model.OwnAccounts.Count() > 1)
    {
        <script>
            $('#ownAccountPicker').change(function () {
                $('#destination').val(this.value);
            });

            $('#destination').change(function () {
                $("#ownAccountPicker")[0].selectedIndex = 0;
            });
        </script>
    }
}

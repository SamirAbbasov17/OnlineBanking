@model List<GetAllJobQueryResponse>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].JobName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].JobDescription)

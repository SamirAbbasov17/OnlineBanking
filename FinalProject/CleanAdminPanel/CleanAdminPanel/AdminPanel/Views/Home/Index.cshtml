									<span class="fs-14">Lorem ipsum dolor sit amet</span>
								</div>
							</div>
							<div class="card-body">
								@foreach (var item in Model)
									{
										
										Random r = new();
										int random = r.Next(0, 100);

										<div class="progress default-progress">
											<div class="progress-bar linear bg-vigit progress-animated" style="width:@random%; height:8px;" role="progressbar">

@using Application.JobApplicationItems.Queries.Response;
@model GetByIdJobApplicationQueryResponse

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Details</h4>
            </div>
            <div class="card-body">


                <div>
                    <h4>JobApplication</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Phone)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Phone)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Linkedin)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Linkedin)
                        </dd>
                        <dt class="col-sm-12">
                            @Html.DisplayNameFor(model => model.Cv):
                        </dt>
                        <dd class="col-sm-12 mt-3">
                            <form method="post" asp-action="DownloadFile">
                                <input type="hidden" value="@Model.Cv" asp-for="Cv" />
                                <input type="hidden" value="@Model.Name" asp-for="Name" />
                                <input type="hidden" value="@Model.Email" asp-for="Email" />
                                <input type="hidden" value="@Model.Phone" asp-for="Phone" />
                                <input type="hidden" value="@Model.Linkedin" asp-for="Linkedin" />
                                <button type="submit" class="btn light btn-primary"><i class="fa fa-download"></i> Download</button>
                            </form>
                           
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>






            </div>
        </div>
    </div>
</div>





@section Css{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   
}
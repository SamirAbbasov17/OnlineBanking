@model CardPaymentBindingModel

@{
    ViewData["Title"] = "Card payment";
}



    <div class="section section-padding" style="padding-top:70px;">
        <div class="container">
        <div class="row g-0" style="display: flex;align-items: center;justify-content: center;">
                <div class="col-lg-6">
                    <div class="user-login-register bg-light">
                        <div class="login-register-title">
                            <h2 class="title">@Model.ProductName</h2>
                            <h3>â‚¬@Model.ProductPrice</h3>
                            <p class="desc">@ViewData["Title"]</p>
                        </div>
                        <div class="login-register-form">
                            <form method="post">
                                <div class="row learts-mb-n50">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="col-12 learts-mb-50">
                                        <label asp-for="Number"></label>
                                        <input class="form-control" asp-for="Number"/>
                                        <span asp-validation-for="Number" class="text-danger"></span>
                                    </div>
                                    <div class="col-12 learts-mb-50">
                                        <label asp-for="Name"></label>
                                        <input class="form-control" asp-for="Name" value=""/>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="row" style="padding:0px -15px">
                                        <div class="col-6 learts-mb-50">
                                            <label asp-for="ExpiryDate"></label>
                                            <input class="form-control" asp-for="ExpiryDate"/>
                                            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                                        </div>
                                        <div class="col-6 learts-mb-50">
                                            <label asp-for="SecurityCode"></label>
                                            <input class="form-control" asp-for="SecurityCode"/>
                                            <span asp-validation-for="SecurityCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row" style="margin-bottom: 30px;">
                                        
                                        <button type="submit" class="btn btn-primary col-12 mx-4" style="margin-bottom:20px;">Pay</button>
                                        <a class="btn btn-outline-secondary col-12 mx-4" asp-controller="Orders" asp-action="My">Cancel</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
@using ECommerceDemo.ViewModels;
@model MainCartVM




<!-- Page Title/Header Start -->
<div class="page-title-section section bg-image">
    <div class="container">
        <div class="row">
            <div class="col">

                <div class="page-title">
                    <h1 class="title">Cart</h1>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active">Cart</li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- Page Title/Header End -->
<!-- Shopping Cart Section Start -->
<div class="section section-padding">
    <div class="container">
        @*<form class="cart-form" asp-action="Cart" method="post">*@
            <table class="cart-wishlist-table table">
                <thead>
                    <tr>
                        <th class="name" colspan="2">Product</th>
                        <th class="price">Price</th>
                        <th class="quantity">Quantity</th>
                        <th class="subtotal">Total</th>
                        <th class="remove">&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="thumbnail"><a href="product-details.html"><img src="~/assets/images/product/cart-product-1.webp" alt="cart-product-1"></a></td>
                        <td class="name"> <a href="product-details.html">Walnut Cutting Board</a></td>
                        <td class="price"><span>£100.00</span></td>
                        <td class="quantity">
                            <div class="product-quantity">
                                <span class="qty-btn minus"><i class="ti-minus"></i></span>
                                <input type="text" class="input-qty" value="1">
                                <span class="qty-btn plus"><i class="ti-plus"></i></span>
                            </div>
                        </td>
                        <td class="subtotal"><span>£100.00</span></td>
                        <td class="remove"><a href="#" class="btn">×</a></td>
                    </tr>
                    <tr>
                        <td class="thumbnail"><a href="product-details.html"><img src="~/assets/images/product/cart-product-2.webp" alt="cart-product-2"></a></td>
                        <td class="name"> <a href="product-details.html">Lucky Wooden Elephant</a></td>
                        <td class="price"><span>£35.00</span></td>
                        <td class="quantity">
                            <div class="product-quantity">
                                <span class="qty-btn minus"><i class="ti-minus"></i></span>
                                <input type="text" class="input-qty" value="1">
                                <span class="qty-btn plus"><i class="ti-plus"></i></span>
                            </div>
                        </td>
                        <td class="subtotal"><span>£35.00</span></td>
                        <td class="remove"><a href="#" class="btn">×</a></td>
                    </tr>
                    <tr>
                        <td class="thumbnail"><a href="product-details.html"><img src="~/assets/images/product/cart-product-3.webp" alt="cart-product-3"></a></td>
                        <td class="name"> <a href="product-details.html">Fish Cut Out Set</a></td>
                        <td class="price"><span>£9.00</span></td>
                        <td class="quantity">
                            <div class="product-quantity">
                                <span class="qty-btn minus"><i class="ti-minus"></i></span>
                                <input type="text" class="input-qty" value="1">
                                <span class="qty-btn plus"><i class="ti-plus"></i></span>
                            </div>
                        </td>
                        <td class="subtotal"><span>£9.00</span></td>
                        <td class="remove"><a href="#" class="btn">×</a></td>
                    </tr>
                  
                    @{
                        List<int> lD = new();
                        List<int> Quant = new();
                        decimal total = 0;
                        int d = 0;
                        }
                        @foreach (var item in Model.Carts)
                        {
                   
                            if (item.Quantity > 0) {
                            d++;
                            <form class="cart-form" asp-action="Cart" method="post">
                                <tr>
                                    <input type="hidden" asp-for="AddCart.UserId" value="3fa85f64-5717-4562-b3fc-2c963f66afa6">
                                    <input type="hidden" asp-for="AddCart.CatalogItemId" value="@item.ShopItemId">
                                    <td class="thumbnail"><a href="product-details.html"><img src="~/assets/images/product/s328/@item.Image" alt="cart-product-3"></a></td>
                                    <td class="name"> <a href="product-details.html">@item.Name</a></td>
                                    <td class="price"><span>£@item.Price</span></td>
                                    <td class="quantity">
                                        <div class="product-quantity" style="padding-bottom: 0px;">
                                            <span class="minB" class="qty-btn minus"><button style="background: none;color: inherit;border: none;padding: 0;font: inherit;cursor: pointer;outline: inherit;" type="submit"><i class="ti-minus"></i></button></span>
                                            <input type="text" class="input-qty" value="@item.Quantity">
                                            <input asp-for="AddCart.Quantity" type="hidden" class="ACQ-@d">
                                            <span class="plsB" class="qty-btn plus"><button style="background: none;color: inherit;border: none;padding: 0;font: inherit;cursor: pointer;outline: inherit;" type="submit"><i class="ti-plus"></i></button></span>
                                        </div>
                                    </td>
                                    <td class="subtotal"><span>£@(item.Price * item.Quantity)</span></td>
                                    <td class="remove"><button style="background: none;color: inherit;border: none;padding: 0;font: inherit;cursor: pointer;outline: inherit;" type="submit" href="#" class="btn">×</button></td>
                                </tr>
                            </form>
                            Quant.Add(item.Quantity);
                            lD.Add(d);
                            total += item.Quantity * item.Price;
                        }

                    }
                </tbody>
            </table>
            <div class="row justify-content-between mb-n3">
                <div class="col-auto mb-3">
                    <div class="cart-coupon">
                        <input type="text" placeholder="Enter your coupon code">
                        <button class="btn"><i class="fal fa-gift"></i></button>
                    </div>
                </div>
                <div class="col-auto">
                    <a class="btn btn-light btn-hover-dark mr-3 mb-3" href="shop.html">Continue Shopping</a>
                    <button class="btn btn-dark btn-outline-hover-dark mb-3">Update Cart</button>
                </div>
            </div>
       @* </form>*@
        <div class="cart-totals mt-5">
            <h2 class="title">Cart totals</h2>
            <table>
                <tbody>
                    <tr class="subtotal">
                        <th>Subtotal</th>
                        <td><span class="amount">£@total</span></td>
                    </tr>
                    <tr class="total">
                        <th>Total</th>
                        <td><strong><span class="amount">£@total</span></strong></td>
                    </tr>
                </tbody>
            </table>
                @if (true)
                {
                    <a asp-controller="DirectPayments" , asp-action="Pay" asp-route-name="Total" asp-route-price="@total" class="btn btn-dark btn-outline-hover-dark">Direct payment</a> 
                    <a asp-controller="CardPayments" , asp-action="Pay" asp-route-name="Total" asp-route-price="@total" class="btn btn-dark btn-outline-hover-dark mt-3">Card payment</a>
                }
        </div>
    </div>

</div>









@section JS{
    <script>
        var d_values = @Html.Raw(Json.Serialize(lD));
        var q_values = @Html.Raw(Json.Serialize(Quant));


        for (let i = 0; i < d_values.length; i++) {
            (function (d) {
                $('.minB').click(function () {
                    $('.ACQ-' + d).val(-1);
                });

                $('.plsB').click(function () {
                    $('.ACQ-' + d).val(1);
                });

                $('.remove').click(function () {
                    $('.ACQ-' + d).val(-q_values[i]);
                });
            })(d_values[i]);
        }

    </script>
}